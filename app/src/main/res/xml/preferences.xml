<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="false"
        android:key="useTilt"
        android:summaryOff="@string/useTilt_SummaryOff"
        android:summaryOn="@string/useTilt_SummaryOn"
        android:title="@string/useTilt_PreferenceTitle" />
    <EditTextPreference
        android:defaultValue="Minigolfstar"
        android:key="username"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:summary="@string/username_Summary"
        android:title="@string/username_PreferenceTitle" />
    <SwitchPreference
        android:defaultValue="false"
        android:key="units"
        android:summaryOff="@string/metric"
        android:summaryOn="@string/imperial"
        android:title="@string/units_PreferenceTitle" />
</PreferenceScreen>